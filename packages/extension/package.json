{
  "name": "@wrp/extension",
  "version": "0.1.2",
  "private": true,
  "author": "Baotlake baotlake@gmail.com",
  "license": "SEE LISENSE IN LISENSE.md",
  "scripts": {
    "start:firefox": "NODE_ENV=development BROWSER=firefox webpack --config webpack.config.js --watch",
    "start:worker": "NODE_ENV=development node build.js",
    "start": "NODE_ENV=development webpack --config webpack.config.js --watch",
    "build:chrome_v3": "NODE_ENV=production node build.js & webpack --config webpack.config.js",
    "build:chrome": "NODE_ENV=production BROWSER=chrome node build.js & NODE_ENV=production BROWSER=chrome webpack --config webpack.config.js",
    "build:firefox": "NODE_ENV=production BROWSER=firefox webpack --config webpack.config.js",
    "build": "yarn build:chrome_v3",
    "zip:firefox": "cd dist/firefox; zip ../firefox_`date +%m_%d`.zip -r *",
    "zip:chrome_v3": "cd dist/chrome_v3; zip ../chrome_v3_`date +%m_%d`.zip -r *",
    "zip:chrome": "cd dist/chrome; zip ../chrome_`date +%m_%d`.zip -r *",
    "zip": "yarn zip:chrome_v3"
  },
  "dependencies": {
    "@wrp/core": "*",
    "@wrp/ui": "*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.133",
    "astroturf": "^1.0.1",
    "copy-webpack-plugin": "^8.0.0",
    "html-webpack-plugin": "^5.3.2",
    "ts-loader": "^8.0.18",
    "webpack": "^5.25.1"
  }
}
