{
  "name": "@wrp/extension",
  "version": "0.0.1",
  "private": true,
  "author": "Baotlake baotlake@gmail.com",
  "license": "SEE LISENSE IN LISENSE.md",
  "scripts": {
    "start:firefox": "yarn build; NODE_ENV=development BROWSER=firefox webpack --config webpack.config.js --watch",
    "start": "NODE_ENV=development webpack --config webpack.config.js --watch",
    "start:worker": "NODE_ENV=development node build.js",
    "build": "NODE_ENV=production node build.js; webpack --config webpack.config.js; webpack --config webpack.copy.js",
    "zip:firefox": "cd dist/firefox; zip ../firefox_`date +%m_%d`.zip -r *",
    "zip": "cd dist/chrome_v3; zip ../chrome_v3_`date +%m_%d`.zip -r *"
  },
  "dependencies": {
    "@wrp/core": "*",
    "@wrp/ui": "*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.133",
    "copy-webpack-plugin": "^8.0.0",
    "html-webpack-plugin": "^5.3.2",
    "ts-loader": "^8.0.18",
    "webpack": "^5.25.1"
  }
}
