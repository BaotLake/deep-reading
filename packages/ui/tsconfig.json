{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "outDir": "./es",
        "preserveSymlinks": true,
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        // "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "rootDir": "./src",
        "paths": {
            "@wrp/core": [
                "../core"
            ],
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "./dist",
        "./es"
    ]
}