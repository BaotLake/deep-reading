{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "paths": {
      "@wrp/core": [
        "../core/dist"
      ],
      "@wrp/ui": [
        "../ui/dist"
      ]
    }
  },
  "include": [
    "pages",
    "utils"
  ],
  "exclude": [
    "node_modules"
  ]
}
